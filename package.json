{
  "name": "nr-ngo-validation-serverless",
  "version": "1.0.5",
  "description": "",
  "scripts": {
    "test": "NODE_ENV=test jest --passWithNoTests --coverage",
    "eslint-check": "eslint src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newrelic/nr-ngo-validation-serverless.git"
  },
  "bugs": {
    "email": "opensource+nr-ngo-validation-serverless@newrelic.com"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@newrelic/eslint-plugin-newrelic": "^0.3.1",
    "@types/aws-lambda": "^8.10.66",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.13",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.15.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "serverless-dotenv-plugin": "^3.1.0",
    "serverless-offline": "^6.4.0",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "envalid": "^6.0.2",
    "http-status-codes": "^2.1.4",
    "node-fetch": "^2.6.1",
    "npm-check": "^5.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": ".spec.ts$",
    "modulePathIgnorePatterns": [
      "src/types/",
      "src/functions/",
      "src/utils/org-validator.ts",
      "src/utils/status.ts"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-case": [
        2,
        "always",
        "lower-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "feat",
          "fix",
          "refactor",
          "revert",
          "test",
          "deps"
        ]
      ],
      "scope-empty": [
        2,
        "always"
      ],
      "type-empty": [
        2,
        "never"
      ],
      "subject-empty": [
        2,
        "never"
      ],
      "subject-min-length": [
        2,
        "always",
        10
      ],
      "subject-full-stop": [
        2,
        "never",
        "."
      ],
      "subject-case": [
        2,
        "always",
        "lower-case"
      ]
    }
  }
}
